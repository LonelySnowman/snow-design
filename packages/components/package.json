{
  "name": "@snow-design/components",
  "version": "0.0.30",
  "description": "SnowDesign 组件库 React 版",
  "main": "lib/cjs/index.js",
  "module": "lib/es/index.js",
  "typings": "lib/es/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/es/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "files": [
    "dist/*",
    "lib/*"
  ],
  "scripts": {
    "build": "snow-tools run build",
    "clean": "rimraf lib dist node_modules",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version"
  },
  "keywords": [
    "snow-design",
    "react"
  ],
  "author": "LonelySnowman",
  "license": "ISC",
  "dependencies": {
    "@snow-design/foundation": "workspace:*",
    "@snow-design/locale": "workspace:*",
    "classnames": "^2.3.2"
  },
  "devDependencies": {
    "@snow-design/theme-default": "workspace:*",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0"
  },
  "peerDependencies": {
    "react": "18"
  }
}
