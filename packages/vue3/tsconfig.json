{
  "compilerOptions": {
    "target": "ES2015",
    "esModuleInterop": true,
    "outDir": "lib",
    "sourceMap": true,
    "allowJs": true,
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["es7", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": false,
    "paths": {
      "@snow-design/foundation/*": ["../foundation/*"],
      "@snow-design/vue3/*": ["../vue3/*"],
      "@snow-design/locale/*": ["../locale/*"],
    },
    "jsx": "preserve",
    "jsxImportSource": "vue"
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules"]
}
