{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@snow-design/foundation/*": ["../foundation/*"],
      "@snow-design/vue3/*": ["../vue3/*"],
      "@snow-design/locale/*": ["../locale/*"],
      "#test/*": ["../../test/*"]
    },
    "types": ["vue"],
    "lib": ["DOM", "ESNext"],
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es6",
    "module": "esnext",
    "skipLibCheck": true,
    "allowJs": true,
    "verbatimModuleSyntax": false,
    "stripInternal": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules"]
}
