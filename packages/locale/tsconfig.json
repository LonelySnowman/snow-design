{
  "compilerOptions": {
    "target": "ES2015",
    "esModuleInterop": true,
    "outDir": "lib",
    "sourceMap": true,
    "allowJs": true,
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["es7", "dom"],
    "jsx": "react",
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": false,
    "paths": {
      "@snow-design/foundation/*": ["../foundation/*"],
      "@snow-design/components/*": ["../components/*"],
    }
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules"]
}
